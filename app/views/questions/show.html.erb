<style>
    html, body {
        background-color: rgb(59, 103, 141);
    }
</style>

 <input type="hidden" id="questionId" value="<%= @question.id %>">

<p id="notice"><%= notice %></p>
<img src="https://simonyi.bme.hu/resources/footer/vik.svg" height="200px" id="image" class="section"></img>

<div class="section">
  <h3>Milyen volt az előadás?</h3>
</div>

<div class="section">
  <h3>Beérkezett válaszok</h3>
  <table>
    <% @question.answers.each do |answer| %>
    <tr>
      <td><%= answer.text %></td>
      <td id="<%= "answer-" + answer.id.to_s %>"><%= answer.votes.count %></td>
    </tr>
    <% end %>
  </table>
</div>

<div class="section">
  <h3>Saját válaszom</h3>
  <form id="form">
    <% @question.answers.each do |answer| %>
    <input type="radio" name="vote" value="<%= answer.id %>">
    <label><%= answer.text %></label><br>
    <%end %>

  </form>
</div>

<button id="submitButton" class="submit">Küldés</button>


<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
